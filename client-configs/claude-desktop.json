{
    "mcpServers": {
        "arxic-mcp": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-u",
                "501:20",
                "-v",
                "/Users/yourname/Downloads:/Users/yourname/Downloads",
                "arxic-mcp"
            ]
        }
    }
}
// Installation Location:
// macOS: ~/Library/Application Support/Claude/claude_desktop_config.json
// Windows: %APPDATA%\Claude\claude_desktop_config.json